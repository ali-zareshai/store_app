<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/outgoing_layout_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="8dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/balloon_outgoing_normal">
        <ImageView
            android:layout_width="250dp"
            android:padding="5dp"
            android:layout_marginRight="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/upload_img_send"
            android:layout_marginBottom="25dp"
            android:src="@drawable/common_google_signin_btn_icon_light"
            android:layout_height="250dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/show_time"

            android:layout_gravity="bottom|right"
            android:paddingRight="5dp">

            <customviews.CustomTextView3
                android:id="@+id/textview_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="11:15 PM"
                style="@style/chat_timings"/>

            <ImageView
                android:id="@+id/user_reply_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingBottom="3dp"
                android:scaleType="center"
                android:src="@drawable/message_got_receipt_from_server"/>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>